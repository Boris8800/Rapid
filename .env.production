# Rapid Roads - Production Environment
# Domain: rapidroad.uk
# VPS IP: 5.249.164.40

# Server Configuration
DOMAIN=rapidroad.uk
VPS_IP=5.249.164.40
NODE_ENV=production

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rapidroads
POSTGRES_USER=rapidroads_admin
POSTGRES_PASSWORD=secure_password_here
POSTGRES_MAX_CONNECTIONS=200

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# Public URLs
PUBLIC_WEB_URL=https://rapidroad.uk
PUBLIC_DRIVER_URL=https://driver.rapidroad.uk
PUBLIC_ADMIN_URL=https://admin.rapidroad.uk
PUBLIC_API_URL=https://api.rapidroad.uk

# CORS
CORS_ORIGINS=https://rapidroad.uk,https://driver.rapidroad.uk,https://admin.rapidroad.uk

# Google APIs
GOOGLE_MAPS_API_KEY=your_maps_key
GOOGLE_PLACES_API_KEY=your_places_key

# Payment Gateways
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
RAZORPAY_KEY_ID=rzp_test_...
RAZORPAY_KEY_SECRET=your_razorpay_secret

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=noreply@rapidroad.uk

# SMS Service
TWILIO_ACCOUNT_SID=your_sid
TWILIO_AUTH_TOKEN=your_token
TWILIO_PHONE_NUMBER=+1234567890

# File Upload
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=rapidroads-uploads
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOKI_URL=http://loki:3100
PROMETHEUS_URL=http://prometheus:9090

# Security
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
