# Copy to .env.production on the VPS (never commit real secrets)
NODE_ENV=production

# Backend
PORT=4000
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rapidroads
POSTGRES_USER=rapidroads_admin
POSTGRES_PASSWORD=ChangeMe_PostgresPassword

REDIS_HOST=redis
REDIS_PORT=6379

JWT_SECRET=ChangeMe_JwtSecret
JWT_REFRESH_SECRET=ChangeMe_JwtRefreshSecret
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# Magic links
MAGIC_LINK_TTL=15m
# If true, API response includes the link (useful for testing)
MAGIC_LINK_RETURN_URL=false

# Used to build magic-link URLs (customer uses root, others use admin./driver.)
DOMAIN_ROOT=rapidroad.uk

CORS_ORIGINS=https://rapidroad.uk,https://driver.rapidroad.uk,https://admin.rapidroad.uk

# Frontend (NEXT_PUBLIC_* is read at build time for client bundles)
NEXT_PUBLIC_API_URL=https://api.rapidroad.uk
