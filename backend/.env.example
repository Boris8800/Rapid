NODE_ENV=production
PORT=4000

# Dev/test toggles
# SKIP_DB=true disables DB-backed modules (Auth/Bookings/Trips/etc.)
SKIP_DB=false
# SKIP_REDIS=true uses an in-memory Redis stub
SKIP_REDIS=false

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rapidroads
POSTGRES_USER=rapidroads_admin
POSTGRES_PASSWORD=secure_password_here

REDIS_HOST=redis
REDIS_PORT=6379

JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRATION=15m
REFRESH_TOKEN_EXPIRATION=7d

# Magic links
MAGIC_LINK_TTL=15m
# If true, API response includes the link (useful for testing)
MAGIC_LINK_RETURN_URL=false

# Used to build magic-link URLs (customer uses root, others use admin./driver.)
DOMAIN_ROOT=rapidroad.uk

CORS_ORIGINS=https://rapidroad.uk,https://driver.rapidroad.uk,https://admin.rapidroad.uk

# Optional security
ENABLE_CSRF=false

# Optional tuning
RATE_LIMIT_MAX=100
POSTGRES_MAX_CONNECTIONS=50

SENTRY_DSN=
